{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "root": true,
  "files": {
    "includes": [
      "**/*{.ts}",
      "**/*{.json}",
      "!node_modules/**/*",
      "!.next/**/*",
      "!.git/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "includes": [
      "**/*{.ts}",
      "**/*{.json}",
      "!node_modules/**/*",
      "!.next/**/*",
      "!.git/**/*"
    ]
  },
  "formatter": {
    "includes": [
      "**/*{.ts}",
      "**/*{.json}",
      "!node_modules/**/*",
      "!.next/**/*",
      "!.git/**/*"
    ],
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "attributePosition": "multiline",
    "bracketSpacing": true,
    "expand": "always",
    "useEditorconfig": true
  },
  "javascript": {
    "parser": {
      "jsxEverywhere": true
    },
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "indentWidth": 2,
      "indentStyle": "space",
      "lineEnding": "lf",
      "lineWidth": 80,
      "expand": "always",
      "operatorLinebreak": "before"
    },
    "linter": {
      "enabled": true
    }
  },
  "json": {
    "parser": {
      "allowComments": false,
      "allowTrailingCommas": false
    },
    "formatter": {
      "enabled": true,
      "expand": "always"
    },
    "linter": {
      "enabled": true
    }
  }
}
